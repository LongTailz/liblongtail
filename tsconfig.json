{
  "compilerOptions": {
    "target": "es2022",
    "module": "nodenext",
    "declaration": true,
    "outDir": "dist",
    "strict": true,
    "moduleResolution": "nodenext",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "allowJs":true,
    "resolveJsonModule":false
  },
  "include": ["*.ts"],
  "exclude": ["node_modules", "**/__tests__/*"]
}
